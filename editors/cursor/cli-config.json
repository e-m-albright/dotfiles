{
  "version": 1,
  "editor": {
    "vimMode": false
  },
  "permissions": {
    "allow": [
      "read.files",
      "search.codebase",
      "run.commands",
      "lint",
      "format",
      "refactor",
      "test"
    ],
    "deny": [
      "execute.untrusted-scripts"
    ]
  },
  "agent": {
    "defaultMode": "agent",
    "contextWindow": "large"
  }
}
